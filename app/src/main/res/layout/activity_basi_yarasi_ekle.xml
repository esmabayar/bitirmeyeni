<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaPlanMavi"
    tools:context=".BasiYarasiEkleActivity"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BASI YARASI EKLE"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="97dp" />

    <TableLayout
        android:layout_width="756dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="211dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#d6d7d7"
                android:padding="15dp"
                android:text="Tarih"
                android:textSize="35sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtTarih"
                android:layout_width="556dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="date"
                android:paddingLeft="10dp"
                android:text=""
                android:textSize="35sp"

                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#d6d7d7"
                android:padding="15dp"
                android:text="Bası Yarası Bölgesi"
                android:textSize="35sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtBasiBolgesi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:text=""
                android:textSize="35sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#d6d7d7"
                android:padding="15dp"
                android:text="Bası Yarası Skoru"
                android:textSize="35sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtBasiSkoru"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:text="1, 2, 3, 4"
                android:textSize="35sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#d6d7d7"
                android:padding="15dp"
                android:text="Bası Yarası Ebadı"
                android:textSize="35sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtBasiEbadi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:text=""
                android:textSize="35sp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnEkle"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:background="@drawable/text_kullanci"
        android:text="EKLE"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="363dp"
        tools:layout_editor_absoluteY="600dp" />

    <Button
        android:id="@+id/btnIptal"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:background="@drawable/text_kullanci"
        android:text="İPTAL"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="585dp"
        tools:layout_editor_absoluteY="600dp" />
</android.support.constraint.ConstraintLayout>