<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaPlanMavi"
    android:hapticFeedbackEnabled="false"
    android:orientation="vertical"
    tools:context=".HastaEkleActivity"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HASTA EKLE"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="70dp" />

    <TableLayout
        android:id="@+id/tableLayout5"
        android:layout_width="720dp"
        android:layout_height="wrap_content"

        android:background="@android:color/background_light"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="200dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#d6d7d7"
                android:padding="15dp"
                android:paddingBottom="15dp"
                android:text="Ad"
                android:textSize="45sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtAd"
                android:layout_width="488dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="24sp" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#d6d7d7"
                android:padding="15dp"
                android:paddingBottom="15dp"
                android:text="Soyad"
                android:textSize="45sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtSoyad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="24sp" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#d6d7d7"
                android:padding="15dp"
                android:paddingBottom="15dp"
                android:text="Yaş"
                android:textSize="45sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtYas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="number"
                android:textSize="24sp" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#d6d7d7"
                android:padding="15dp"
                android:paddingBottom="15dp"
                android:text="Cinsiyet"
                android:textSize="45sp"
                android:textStyle="bold" />


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rdBtnKadin"
                    android:layout_width="223dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="40dp"
                    android:text="Kadın"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/rdBtnErkek"
                    android:layout_height="match_parent"
                    android:text="Erkek"
                    android:textSize="24sp" />

            </TableRow>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#d6d7d7"
                android:padding="15dp"
                android:paddingLeft="15dp"
                android:text="Kan Grubu"
                android:textSize="45sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spnrKanGrubu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/kangrubu" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#d6d7d7"
                android:padding="15dp"
                android:paddingRight="40dp"
                android:paddingBottom="15dp"
                android:text="Yatış Tarihi"
                android:textSize="45sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtYatisTarihi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="date" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:background="#d6d7d7"
                android:paddingLeft="15dp"
                android:text="Yatak No"
                android:textSize="45sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spnrYatakNo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:entries="@array/yatakno" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnIptal"
        android:layout_width="155dp"
        android:layout_height="70dp"
        android:background="@drawable/text_kullanci"
        android:text="İPTAL"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="605dp"
        tools:layout_editor_absoluteY="859dp" />

    <Button
        android:id="@+id/btnEkle"
        android:layout_width="155dp"
        android:layout_height="70dp"
        android:background="@drawable/text_kullanci"
        android:text="EKLE"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="423dp"
        tools:layout_editor_absoluteY="859dp" />


</android.support.constraint.ConstraintLayout>